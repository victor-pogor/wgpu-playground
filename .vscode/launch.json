    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'webgpu-playground'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=webgpu-playground",
                    "--package=webgpu-playground"
                ],
                "filter": {
                    "name": "webgpu-playground",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run without debug 'webgpu-playground'",
            "program": "${workspaceFolder}/target/debug/webgpu-playground",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'webgpu-playground'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=webgpu-playground",
                    "--package=webgpu-playground"
                ],
                "filter": {
                    "name": "webgpu-playground",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}